<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/HueBackground"
    tools:context="com.bestteamathackrice.guesshue.HighScores">

    <com.bestteamathackrice.guesshue.CustomTextView
        android:id="@+id/high_head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:padding="20dp"
        android:text="@string/high_scores"
        android:textColor="@color/HueMedium"
        android:textSize="24sp"
        android:textStyle="bold"
        android:fontFamily="fonts/ropasansregular.ttf"/>

    <TextView
        android:id="@+id/high_scores_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/high_head"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:padding="10dp"
        android:textColor="@color/HueMedium"
        android:textSize="22sp"
        android:textStyle="bold"
        android:fontFamily="fonts/ropasansregular.ttf"/>

</RelativeLayout>
